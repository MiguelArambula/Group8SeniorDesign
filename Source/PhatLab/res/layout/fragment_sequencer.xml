<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="2"
		android:orientation="horizontal" >
		
        <ImageButton
	        android:id="@+id/btn_track00_step00"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="1" />
        
        <ImageButton
	        android:id="@+id/btn_track00_step01"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="1" />
        
        <ImageButton
	        android:id="@+id/btn_track00_step02"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="1" />
        
        <ImageButton
	        android:id="@+id/btn_track00_step03"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="1" />
        
        <ImageButton
	        android:id="@+id/btn_track00_step04"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="1" />
        
        <ImageButton
	        android:id="@+id/btn_track00_step05"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="1" />
        
        <ImageButton
	        android:id="@+id/btn_track00_step06"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="1" />
        
        <ImageButton
	        android:id="@+id/btn_track00_step07"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="1" />
        
	</LinearLayout>
	
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="2"
		android:orientation="horizontal" >
		
        <ImageButton
	        android:id="@+id/btn_track01_step00"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="1" />
        
        <ImageButton
	        android:id="@+id/btn_track01_step01"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="1" />
        
        <ImageButton
	        android:id="@+id/btn_track01_step02"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="1" />
        
        <ImageButton
	        android:id="@+id/btn_track01_step03"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="1" />
        
        <ImageButton
	        android:id="@+id/btn_track01_step04"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="1" />
        
        <ImageButton
	        android:id="@+id/btn_track01_step05"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="1" />
        
        <ImageButton
	        android:id="@+id/btn_track01_step06"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="1" />
        
        <ImageButton
	        android:id="@+id/btn_track01_step07"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="1" />
        
	</LinearLayout>
    
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="2"
		android:orientation="horizontal" >
    
    	<ImageButton
	        android:id="@+id/btn_start"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="2" />
    
    	<ImageButton
	        android:id="@+id/btn_stop"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/pad_empty"
	        android:layout_weight="2" />
    	
    	<Space 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1" />
    	
    </LinearLayout>
    
    <Space 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" />
    
    
	
</LinearLayout>